        {
          "variable": "result_grade",
          "operator": "=",
          "value": "(blackboard_exercises_points < 25 || laboratory_exercises_points < 25 || written_part_points < 25 || sum_points < 76) ? \"failed\" : (sum_points <= 100 ? \"satisfactory\" : (sum_points <= 125 ? \"good\" : \"very good\"))"
        }
      ]
    }
  ]
