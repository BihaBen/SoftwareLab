  ],
  "inputs": [
    {
      "id": "R1",
      "description": "A university course grade system evaluates grades based on BE (blackboard exercises), LE (laboratory exercises), WP (written part), each in the range 0â€“50 points.",
      "causes": [],
      "effects": []
    },
    {
      "id": "R2",
      "description": "The sum of partial grades SUM = (BE + LE + WP) is calculated.",
      "causes": [],
      "effects": [
        {
          "variable": "sum_points",
          "operator": "=",
          "value": "blackboard_exercises_points + laboratory_exercises_points + written_part_points"
        }
      ]
    }
  ],
  "outputs": [
